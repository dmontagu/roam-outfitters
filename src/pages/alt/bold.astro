---
import '../../styles/global.css';
import { Image } from 'astro:assets';

// Hero
import driftBoat from '../../assets/images/carousel/drift-boat-green-valley.jpg';

// Landscape / divider
import goldenMeadow from '../../assets/images/carousel/golden-meadow-river.jpg';
import wadingSnowy from '../../assets/images/carousel/wading-snowy-peaks.jpg';

// About
import brett from '../../assets/images/about/brett.jpg';

// Gallery
import trophyBrown from '../../assets/images/gallery/trophy-brown-streamside.jpg';
import rainbowYellowstone from '../../assets/images/gallery/rainbow-over-yellowstone.jpg';
import wadeFishing from '../../assets/images/gallery/wade-fishing-canyon.jpg';
import driftBoatBridge from '../../assets/images/gallery/drift-boat-wooden-bridge.jpg';
import aerialPelicans from '../../assets/images/gallery/aerial-pelicans-drift-boat.jpg';
import coupleBrown from '../../assets/images/gallery/couple-brown-trout-boat.jpg';
import castingBridge from '../../assets/images/gallery/casting-under-bridge.jpg';
import walkWade from '../../assets/images/gallery/walk-wade-mountain-stream.jpg';
import fatherSon from '../../assets/images/gallery/father-son-river-rainbow.jpg';
import flySelection from '../../assets/images/gallery/fly-selection-creekside.jpg';
import buddiesRainbow from '../../assets/images/gallery/buddies-rainbow-on-boat.jpg';
import rainbowCelebration from '../../assets/images/gallery/rainbow-catch-celebration.jpg';

const base = import.meta.env.BASE_URL;

const galleryImages = [
  { src: trophyBrown, alt: 'Trophy brown trout held streamside' },
  { src: rainbowYellowstone, alt: 'Vivid rainbow over the Yellowstone River' },
  { src: wadeFishing, alt: 'Wade fishing in a deep canyon reach' },
  { src: driftBoatBridge, alt: 'Drift boat passing under a wooden bridge' },
  { src: aerialPelicans, alt: 'Aerial view of pelicans alongside a drift boat' },
  { src: coupleBrown, alt: 'Couple showing off a brown trout on the boat' },
  { src: castingBridge, alt: 'Casting a fly line beneath a bridge' },
  { src: walkWade, alt: 'Walk-and-wade fishing in a mountain stream' },
  { src: fatherSon, alt: 'Father and son with a river rainbow' },
  { src: flySelection, alt: 'Selecting flies creekside' },
  { src: buddiesRainbow, alt: 'Friends celebrating a rainbow catch on the boat' },
  { src: rainbowCelebration, alt: 'Angler celebrating a rainbow trout catch' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roam Outfitters — Montana Fly Fishing</title>
    <meta name="description" content="23 years. Six rivers. Montana's premier fly fishing guides. Book the trip with Roam Outfitters.">
    <meta name="robots" content="noindex">

    <link rel="icon" type="image/x-icon" href={`${base}favicon.ico`}>
    <link rel="icon" type="image/png" sizes="32x32" href={`${base}favicon-32x32.png`}>
    <link rel="apple-touch-icon" sizes="180x180" href={`${base}apple-touch-icon.png`}>

    <!-- Space Grotesk — bold geometric sans for display type -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">

    <script is:inline>document.documentElement.classList.add('js');</script>

    <style is:inline>
      /* ═══════════════════════════════════════════
         BOLD TERRITORY — DESIGN SYSTEM
         ═══════════════════════════════════════════ */

      :root {
        --bold-black: #0A0A0A;
        --bold-dark: #141414;
        --bold-light: #F5F5F5;
        --bold-white: #FFFFFF;
        --bold-gray: #888888;
        --bold-body: #CCCCCC;
        --bold-teal: #2D8FA5;
        --bold-teal-hover: #1E7A8F;
        --bold-display: 'Space Grotesk', system-ui, sans-serif;
        --bold-body-font: 'Inter', system-ui, sans-serif;
      }

      * { box-sizing: border-box; }

      body {
        margin: 0;
        padding: 0;
        background: var(--bold-black);
        color: var(--bold-white);
        font-family: var(--bold-body-font);
        font-size: 16px;
        line-height: 1.7;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        overflow-x: hidden;
      }

      /* ── DISPLAY TYPE ────────────────────────── */

      .bold-display {
        font-family: var(--bold-display);
        font-weight: 700;
        line-height: 0.9;
        letter-spacing: -0.03em;
      }

      .bold-kicker {
        font-family: var(--bold-body-font);
        font-weight: 500;
        font-size: clamp(11px, 1.2vw, 13px);
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: var(--bold-teal);
      }

      .bold-cta {
        font-family: var(--bold-display);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        display: inline-block;
        padding: 16px 40px;
        background: var(--bold-teal);
        color: var(--bold-white);
        text-decoration: none;
        transition: background 0.2s ease, transform 0.2s ease;
        font-size: 14px;
      }

      .bold-cta:hover {
        background: var(--bold-teal-hover);
      }

      .bold-cta-outline {
        font-family: var(--bold-display);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        display: inline-block;
        padding: 16px 40px;
        background: transparent;
        color: var(--bold-teal);
        text-decoration: none;
        border: 2px solid var(--bold-teal);
        transition: background 0.2s ease, color 0.2s ease;
        font-size: 14px;
      }

      .bold-cta-outline:hover {
        background: var(--bold-teal);
        color: var(--bold-white);
      }

      /* ── PHOTO TREATMENT ─────────────────────── */

      .bold-photo {
        filter: contrast(1.1) saturate(0.85);
      }

      /* ── SCROLL REVEAL ───────────────────────── */

      html.js .bold-reveal {
        opacity: 0;
        transform: translateY(24px);
        transition: opacity 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94),
                    transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      }

      html.js .bold-reveal.bold-visible {
        opacity: 1;
        transform: translateY(0);
      }

      /* When reveal + stagger are combined, parent skips its own animation */
      html.js .bold-reveal.bold-stagger {
        opacity: 1;
        transform: none;
        transition: none;
      }

      /* Stagger children */
      html.js .bold-stagger > * {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94),
                    transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      }

      html.js .bold-stagger.bold-visible > * {
        opacity: 1;
        transform: translateY(0);
      }

      html.js .bold-stagger.bold-visible > *:nth-child(1) { transition-delay: 0s; }
      html.js .bold-stagger.bold-visible > *:nth-child(2) { transition-delay: 0.1s; }
      html.js .bold-stagger.bold-visible > *:nth-child(3) { transition-delay: 0.2s; }
      html.js .bold-stagger.bold-visible > *:nth-child(4) { transition-delay: 0.3s; }
      html.js .bold-stagger.bold-visible > *:nth-child(5) { transition-delay: 0.4s; }
      html.js .bold-stagger.bold-visible > *:nth-child(6) { transition-delay: 0.5s; }
      html.js .bold-stagger.bold-visible > *:nth-child(7) { transition-delay: 0.6s; }
      html.js .bold-stagger.bold-visible > *:nth-child(8) { transition-delay: 0.7s; }

      /* ── REDUCED MOTION ──────────────────────── */

      @media (prefers-reduced-motion: reduce) {
        html.js .bold-reveal,
        html.js .bold-stagger > * {
          opacity: 1;
          transform: none;
          transition: none;
        }
        .bold-stat-number {
          /* no count-up, just show final */
        }
      }

      /* ═══════════════════════════════════════════
         HERO
         ═══════════════════════════════════════════ */

      .bold-hero {
        position: relative;
        height: 100vh;
        min-height: 600px;
        display: flex;
        align-items: flex-end;
        overflow: hidden;
      }

      .bold-hero-bg {
        position: absolute;
        inset: 0;
        z-index: 0;
      }

      .bold-hero-bg img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .bold-hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
          to top,
          rgba(10, 10, 10, 0.85) 0%,
          rgba(10, 10, 10, 0.4) 40%,
          rgba(10, 10, 10, 0.2) 70%,
          rgba(10, 10, 10, 0.35) 100%
        );
        z-index: 1;
      }

      .bold-hero-content {
        position: relative;
        z-index: 2;
        padding: 0 clamp(24px, 5vw, 80px) clamp(48px, 8vh, 96px);
        width: 100%;
      }

      .bold-hero-title {
        font-size: clamp(48px, 13vw, 220px);
        margin: 0;
        line-height: 0.85;
      }

      .bold-hero-subtitle {
        margin-top: clamp(16px, 2vw, 24px);
        margin-bottom: 0;
      }

      .bold-hero-cta {
        margin-top: clamp(24px, 3vw, 40px);
      }

      /* ═══════════════════════════════════════════
         STATS BAND
         ═══════════════════════════════════════════ */

      .bold-stats {
        background: var(--bold-dark);
        padding: clamp(48px, 6vw, 96px) clamp(24px, 5vw, 80px);
      }

      .bold-stats-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: clamp(24px, 3vw, 48px);
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
      }

      .bold-stat-number {
        font-family: var(--bold-display);
        font-weight: 700;
        font-size: clamp(72px, 14vw, 200px);
        line-height: 0.85;
        color: var(--bold-white);
        display: block;
      }

      .bold-stat-label {
        font-family: var(--bold-display);
        font-weight: 600;
        font-size: clamp(10px, 1.2vw, 14px);
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: var(--bold-teal);
        margin-top: clamp(8px, 1vw, 16px);
        display: block;
      }

      /* ═══════════════════════════════════════════
         ABOUT / THE GUIDE
         ═══════════════════════════════════════════ */

      .bold-about {
        background: var(--bold-black);
        padding: 0;
      }

      .bold-about-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        min-height: 600px;
      }

      .bold-about-image {
        position: relative;
        overflow: hidden;
      }

      .bold-about-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center 20%;
      }

      .bold-about-text {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: clamp(40px, 5vw, 80px) clamp(32px, 4vw, 80px);
      }

      .bold-about-statements {
        list-style: none;
        padding: 0;
        margin: clamp(24px, 2vw, 32px) 0 0 0;
      }

      .bold-about-statements li {
        font-family: var(--bold-display);
        font-weight: 500;
        font-size: clamp(18px, 2vw, 28px);
        line-height: 1.3;
        color: var(--bold-white);
        padding: clamp(12px, 1vw, 16px) 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
      }

      .bold-about-statements li:last-child {
        border-bottom: none;
      }

      .bold-about-philosophy {
        color: var(--bold-body);
        font-size: clamp(15px, 1.1vw, 17px);
        margin-top: clamp(24px, 2vw, 32px);
        max-width: 480px;
      }

      @media (max-width: 768px) {
        .bold-about-grid {
          grid-template-columns: 1fr;
        }
        .bold-about-image {
          height: 50vh;
          min-height: 300px;
        }
      }

      /* ═══════════════════════════════════════════
         RIVERS / THE WATERS
         ═══════════════════════════════════════════ */

      .bold-rivers {
        background: var(--bold-light);
        padding: clamp(64px, 8vw, 120px) clamp(24px, 5vw, 80px);
      }

      .bold-rivers-heading {
        font-size: clamp(48px, 8vw, 140px);
        color: var(--bold-black);
        margin: 0 0 clamp(40px, 4vw, 64px) 0;
      }

      .bold-rivers-list {
        max-width: 900px;
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .bold-rivers-list li {
        padding: clamp(16px, 2vw, 24px) 0;
        border-top: 2px solid var(--bold-teal);
        display: flex;
        flex-wrap: wrap;
        align-items: baseline;
        gap: clamp(12px, 2vw, 24px);
      }

      .bold-river-name {
        font-family: var(--bold-display);
        font-weight: 700;
        font-size: clamp(22px, 3vw, 36px);
        color: var(--bold-black);
        flex-shrink: 0;
      }

      .bold-river-dash {
        color: var(--bold-teal);
        font-weight: 700;
        font-size: clamp(18px, 2vw, 24px);
      }

      .bold-river-desc {
        font-size: clamp(14px, 1.2vw, 17px);
        color: #555;
        line-height: 1.5;
      }

      .bold-rivers-list li:last-child {
        border-bottom: 2px solid var(--bold-teal);
      }

      /* ═══════════════════════════════════════════
         FULL-BLEED IMAGE BREAK
         ═══════════════════════════════════════════ */

      .bold-image-break {
        position: relative;
        height: clamp(50vh, 60vh, 70vh);
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .bold-image-break img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .bold-image-break-overlay {
        position: absolute;
        inset: 0;
        background: rgba(10, 10, 10, 0.55);
        z-index: 1;
      }

      .bold-image-break-text {
        position: relative;
        z-index: 2;
        font-size: clamp(36px, 7vw, 120px);
        text-align: center;
        padding: 0 24px;
        margin: 0;
      }

      /* ═══════════════════════════════════════════
         TRIPS / THE TRIP
         ═══════════════════════════════════════════ */

      .bold-trips {
        background: var(--bold-black);
        padding: clamp(64px, 8vw, 120px) clamp(24px, 5vw, 80px);
      }

      .bold-trips-heading {
        font-size: clamp(48px, 8vw, 140px);
        margin: 0 0 clamp(40px, 4vw, 64px) 0;
      }

      .bold-trips-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: clamp(16px, 2vw, 32px);
        max-width: 1000px;
      }

      .bold-trip-card {
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: clamp(32px, 3vw, 48px);
        background: var(--bold-dark);
        transition: border-color 0.2s ease;
      }

      .bold-trip-card:hover {
        border-color: var(--bold-teal);
      }

      .bold-trip-type {
        font-family: var(--bold-display);
        font-weight: 700;
        font-size: clamp(24px, 3vw, 36px);
        margin: 0 0 8px 0;
      }

      .bold-trip-duration {
        font-family: var(--bold-body-font);
        font-weight: 500;
        font-size: clamp(11px, 1vw, 13px);
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: var(--bold-teal);
        margin-bottom: clamp(20px, 2vw, 32px);
      }

      .bold-trip-price {
        font-family: var(--bold-display);
        font-weight: 700;
        font-size: clamp(20px, 2.5vw, 32px);
        line-height: 1.3;
      }

      .bold-trip-price .dollar {
        color: var(--bold-teal);
      }

      .bold-trip-price-label {
        font-family: var(--bold-body-font);
        font-size: clamp(12px, 1vw, 14px);
        color: var(--bold-gray);
        text-transform: uppercase;
        letter-spacing: 0.1em;
      }

      .bold-trip-note {
        margin-top: clamp(6px, 0.5vw, 8px);
      }

      .bold-trips-included {
        margin-top: clamp(40px, 4vw, 64px);
        max-width: 1000px;
      }

      .bold-trips-included h3 {
        font-family: var(--bold-display);
        font-weight: 700;
        font-size: clamp(20px, 2vw, 28px);
        margin: 0 0 clamp(16px, 1.5vw, 24px) 0;
      }

      .bold-included-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 8px 32px;
      }

      .bold-included-list li {
        font-size: clamp(14px, 1vw, 16px);
        color: var(--bold-body);
        padding: 8px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
        padding-left: 16px;
        position: relative;
      }

      .bold-included-list li::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        width: 6px;
        height: 6px;
        background: var(--bold-teal);
        transform: translateY(-50%);
      }

      .bold-trips-cta {
        margin-top: clamp(40px, 4vw, 64px);
      }

      @media (max-width: 600px) {
        .bold-trips-grid {
          grid-template-columns: 1fr;
        }
      }

      /* ═══════════════════════════════════════════
         GALLERY
         ═══════════════════════════════════════════ */

      .bold-gallery {
        background: var(--bold-dark);
        padding: clamp(64px, 8vw, 120px) clamp(24px, 5vw, 80px);
      }

      .bold-gallery-heading {
        font-size: clamp(36px, 5vw, 72px);
        margin: 0 0 clamp(32px, 3vw, 56px) 0;
      }

      .bold-gallery-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 4px;
        max-width: 1400px;
        margin: 0 auto;
      }

      .bold-gallery-item {
        position: relative;
        aspect-ratio: 3 / 2;
        overflow: hidden;
      }

      .bold-gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
      }

      .bold-gallery-item::after {
        content: '';
        position: absolute;
        inset: 0;
        border: 0px solid var(--bold-teal);
        transition: border-width 0.2s ease;
        pointer-events: none;
        z-index: 1;
      }

      .bold-gallery-item:hover img {
        transform: scale(1.03);
      }

      .bold-gallery-item:hover::after {
        border-width: 3px;
      }

      @media (max-width: 900px) {
        .bold-gallery-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (max-width: 480px) {
        .bold-gallery-grid {
          grid-template-columns: 1fr;
        }
      }

      /* ═══════════════════════════════════════════
         CONTACT
         ═══════════════════════════════════════════ */

      .bold-contact {
        background: var(--bold-black);
        padding: clamp(64px, 8vw, 120px) clamp(24px, 5vw, 80px);
        text-align: center;
      }

      .bold-contact-phone {
        font-family: var(--bold-display);
        font-weight: 700;
        font-size: clamp(36px, 8vw, 120px);
        line-height: 0.9;
        margin: clamp(24px, 3vw, 40px) 0;
        color: var(--bold-white);
      }

      .bold-contact-phone a {
        color: inherit;
        text-decoration: none;
        transition: color 0.2s ease;
      }

      .bold-contact-phone a:hover {
        color: var(--bold-teal);
      }

      .bold-contact-links {
        display: flex;
        justify-content: center;
        gap: clamp(24px, 3vw, 48px);
        margin-top: clamp(16px, 2vw, 24px);
        flex-wrap: wrap;
      }

      .bold-contact-links a {
        color: var(--bold-gray);
        text-decoration: none;
        font-family: var(--bold-body-font);
        font-size: clamp(14px, 1.2vw, 16px);
        letter-spacing: 0.05em;
        transition: color 0.2s ease;
      }

      .bold-contact-links a:hover {
        color: var(--bold-teal);
      }

      .bold-contact-tagline {
        font-family: var(--bold-display);
        font-weight: 500;
        font-size: clamp(16px, 1.5vw, 22px);
        color: var(--bold-gray);
        margin-top: clamp(20px, 2vw, 32px);
      }

      .bold-contact-cta {
        margin-top: clamp(32px, 3vw, 48px);
      }

      /* ═══════════════════════════════════════════
         FOOTER
         ═══════════════════════════════════════════ */

      .bold-footer {
        background: #050505;
        padding: clamp(32px, 3vw, 48px) clamp(24px, 5vw, 80px);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 16px;
      }

      .bold-footer-brand {
        font-family: var(--bold-display);
        font-weight: 600;
        font-size: 13px;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.3);
      }

      .bold-footer-copy {
        font-size: 13px;
        color: rgba(255, 255, 255, 0.2);
      }

      /* ═══════════════════════════════════════════
         STICKY CTA BAR
         ═══════════════════════════════════════════ */

      .bold-sticky-cta {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 50;
        background: rgba(10, 10, 10, 0.95);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-top: 1px solid rgba(255, 255, 255, 0.08);
        padding: 12px clamp(24px, 5vw, 80px);
        display: flex;
        align-items: center;
        justify-content: space-between;
        transform: translateY(100%);
        transition: transform 0.3s ease;
      }

      .bold-sticky-cta.bold-sticky-visible {
        transform: translateY(0);
      }

      .bold-sticky-cta-text {
        font-family: var(--bold-display);
        font-weight: 500;
        font-size: clamp(14px, 1.2vw, 18px);
        color: var(--bold-gray);
      }

      .bold-sticky-cta-btn {
        font-family: var(--bold-display);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-size: 13px;
        padding: 10px 28px;
        background: var(--bold-teal);
        color: var(--bold-white);
